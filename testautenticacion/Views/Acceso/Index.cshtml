
@{
    Layout = null;
}



<!DOCTYPE html>



<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
</head>
<body>

 

    <div class="container">



        <div class="row">




            <div class=" jumbotron col-sm-4 col-sm-offset-4" style="background-color:mediumturquoise">
                <img src="~/images/Imagen1.png" style="width:100px; height:100px; align-content:center" class="col-sm-4 col-sm-offset-4" />
                <h1 style="text-align: center; color: white" class="active">Iniciar Sesión</h1>



                <form action="@Url.Action("Index","Acceso")" class="bg-primary" style="padding:10px;background-color:mediumturquoise" method="post">



                    <div class="form-group">
                        <br />
                        <label style="color: white">Usuario:</label>
                        <input class="form-control" type="email" name="correo" />
                    </div>



                    <div class="form-group">
                        <label style="color: white">Contraseña:</label>
                        <input class="form-control" type="password" name="clave" />
                    </div>





                    <button type="submit" class=" col-lg-offset-4 btn btn-lg" style="background-color:forestgreen; color:white">Ingresar</button>
                </form>




            </div>




        </div>
    </div>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>