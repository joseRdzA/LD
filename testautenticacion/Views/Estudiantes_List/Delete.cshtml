@model testautenticacion.Models.Estudiantes_List

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar Alumno</h2>

<h3>¿Desea Eliminar el Registro?</h3>
<div>
    <h4>Lista Estudiantil</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nombre del Estudiante")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre_Estudiante)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cedula)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cedula)
        </dd>

        <dt>
            @Html.DisplayName("Fecha de Nacimiento")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fechaNacimiento)
        </dd>

        <dt>
            @Html.DisplayName("Número de Contacto")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Numero_Contacto)
        </dd>

        <dt>
            @Html.DisplayName("Nivel")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nivel_Estudiante.Nivel)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            <p><a href="/Estudiantes/Index">Regresar a la Lista</a></p>
        </div>
    }
</div>
