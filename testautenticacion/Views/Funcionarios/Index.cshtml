@model IEnumerable<testautenticacion.Models.Funcionario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Funcionarios</h2>

<p>
    @Html.ActionLink("Crear un nuevo empleado", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nombre completo")
        </th>
        <th>
            @Html.DisplayName("Número de teléfono")
        </th>
        <th>
            @Html.DisplayName("Correo Electrónico")
        </th>
        <th>
            @Html.DisplayName("Cargo")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Completo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Num_Tel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo_Electronico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargos.Nombre_Cargo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Funcionario }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id_Funcionario }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Funcionario })
            </td>
        </tr>
    }

</table>
