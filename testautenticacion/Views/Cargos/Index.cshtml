@model IEnumerable<testautenticacion.Models.Cargos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cargos</h2>

<p>
    @Html.ActionLink("Crear nuevo cargo", "Create")
</p>

<table class="table table-hover table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayName("Nombre del cargo")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Cargo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Cargo }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id_Cargo }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Cargo })
            </td>
        </tr>
    }

</table>
